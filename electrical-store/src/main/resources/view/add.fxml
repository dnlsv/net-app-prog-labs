<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="276.0" prefWidth="650.0"
            xmlns="http://javafx.com/javafx/11.0.1" fx:controller="org.example.controller.AddController">
    <children>
        <AnchorPane prefHeight="60.0" prefWidth="650.0" style="-fx-background-color: #2E3348;">
            <children>
                <Label layoutX="212.0" layoutY="10.0" prefHeight="41.0" prefWidth="227.0" text="Добавление товара"
                       textFill="WHITE">
                    <font>
                        <Font name="System Italic" size="24.0"/>
                    </font>
                </Label>
            </children>
        </AnchorPane>
        <Label layoutX="19.0" layoutY="101.0" text="Название"/>
