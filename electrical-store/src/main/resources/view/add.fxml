        <TextField fx:id="nameField" layoutX="115.0" layoutY="96.0"/>
        <TextField fx:id="costField" layoutX="444.0" layoutY="96.0"/>
        <TextField fx:id="quantityField" layoutX="115.0" layoutY="150.0"/>
